modules = ["bash", "nix", "nodejs-20", "postgresql-16"]
[nix]
channel = "stable-25_05"
packages = ["postgresql_16"]

[agent]
expertMode = true
integrations = ["javascript_database:1.0.0", "google-mail:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Development"
author = 47792218
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"

[[workflows.workflow]]
name = "Setup"
author = 48190948
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node setup.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow]]
name = "Production"
